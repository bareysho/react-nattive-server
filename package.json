{
  "name": "node-express-mongo-passport-jwt-typescript",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerrychong25/node-express-mongo-passport-jwt-typescript.git"
  },
  "imports": {
    "@*": "src/*"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "watch-node": "SET NODE_ENV=development && nodemon dist/server.js",
    "build-ts": "tsc && tsc-alias",
    "watch-ts": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "eslint --ext ts,tsx src",
    "lint:fix": "eslint --fix --ext ts,js src",
    "prettier": "prettier 'src/**/*.{ts,js,json}'",
    "prettier:fix": "npm run prettier -- --write"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-random-string": "^3.3.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.0",
    "nodemon": "^2.0.20",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "tsc-alias": "^1.8.2"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/nodemailer": "^6.4.7",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.3",
    "@types/node": "^16.18.11",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
